kind: ConfigMap
apiVersion: v1
metadata:
  name: mqbasic
  namespace: $TARGET_NAMESPACE
data:
  mq.mqsc: |-
    define ql(IN)
    define ql(OUT)
    ALTER QMGR CHLAUTH(DISABLED) CONNAUTH(' ')
    REFRESH SECURITY TYPE(CONNAUTH)
---
apiVersion: mq.ibm.com/v1beta1
kind: QueueManager
metadata:
  name: basicmq
  namespace: $TARGET_NAMESPACE
spec:
  version: 9.2.4.0-r1
  license:
    accept: true
    license: L-RJON-C7QG3S
    use: "NonProduction"
  web:
    enabled: true
  queueManager:
    resources:
      limits:
        cpu: 250m
      requests:
        cpu: 100m
    mqsc:
      - configMap:
          name: mqbasic
          items:
            - mq.mqsc
  template:
    pod:
      containers:
        - env:
            - name: MQSNOAUT
              value: 'yes'
          name: qmgr
